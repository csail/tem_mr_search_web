<h1>Listing queries</h1>

<table>
  <tr>
    <th>Start city</th>
    <th>End city</th>
    <th>Max price</th>
    <th>Prefer early</th>
  </tr>

<% @queries.each do |query| %>
  <tr>
    <td><%=h query.start_city %></td>
    <td><%=h query.end_city %></td>
    <td><%=h query.max_price %></td>
    <td><%=h query.prefer_early %></td>
    <td><%= link_to 'Show', query %></td>
    <td><%= link_to 'Edit', edit_query_path(query) %></td>
    <td><%= link_to 'Destroy', query, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New query', new_query_path %>